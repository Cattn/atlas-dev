---
import { ViewTransitions, fade } from 'astro:transitions'
import { Toaster } from 'solid-toast'

import '../style.css'
---

<html lang="en" transition:animate={fade({ duration: '0.05s' })}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="shortcut icon" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet" />
    <script>
      import store from 'store2'
      import { clearRegistrations, registerSW, wispUrl } from '../lib/sw'
      import { handleCloak, type cloaks } from '../lib/cloak'
      import { showModal } from '../components/modal'

      store.set('bookmarks', [], false)
      store.set('abortKey', '', false)
      store.set('cloak', 'none', false)
      store.set('transport', '/epoxy/index.mjs', false)
      store.set('wispServer', wispUrl, false)
      store.set('theme', 'atlas', false)

      document.addEventListener('astro:page-load', async () => {
        const theme = store('theme') as string
        document.documentElement.dataset.theme = theme

        if ('serviceWorker' in navigator) {
          await clearRegistrations()
          await registerSW()
        }

        const cloak = store('cloak') as keyof typeof cloaks
        if (cloak) {
          handleCloak(cloak)
        }

        document.onkeydown = (e) => {
          const key = store('abortKey') as string
          if (!key || key.length < 1 || e.key !== key) return

          window.location.replace('https://classroom.google.com')
        }
      })
    </script>
    <ViewTransitions />

    <title>Atlas</title>
  </head>
  <body>
    <Toaster client:load />
    <slot />
  </body>
</html>
